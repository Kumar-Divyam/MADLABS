<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:color="@color/black"
                android:width="5dp"/>
            <gradient
                android:startColor="#45B300"
                android:endColor="#B3002A"
                android:centerColor="#D6FB00"/>
            <corners
                android:bottomLeftRadius="25dp"
                android:topRightRadius="25dp"/>
            <padding
                android:left="30dp"
                android:top="30dp"
                android:bottom="30dp"
                android:right="10dp"/>
        </shape>
    </item>
</selector>