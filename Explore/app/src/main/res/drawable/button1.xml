<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:color="#CD211B"
                android:width="3dp"/>
            <gradient
                android:startColor="#003CB3"
                android:endColor="#00B3AD"
                android:centerColor="#D0A4EF"/>
            <corners
                android:bottomLeftRadius="25dp"/>
            <padding
                android:left="30dp"
                android:top="30dp"
                android:bottom="30dp"
                android:right="10dp"/>

        </shape>
    </item>
</selector>