<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#FFFA00">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SIMPLE CALC"
        android:textSize="37sp"
        android:textColor="#6C085B"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginBottom="10sp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="num 1"
        android:textSize="30sp"
        android:textColor="#431724"
        android:id="@+id/num1"
        android:background="#FB7C26"
        android:gravity="center"
        android:layout_marginBottom="8sp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="num 2"
        android:textSize="30sp"
        android:textColor="#640B67"
        android:id="@+id/num2"
        android:background="#F674CB"
        android:gravity="center"
        android:layout_marginBottom="8sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Result"
        android:textColor="#1F450D"
        android:textSize="30sp"
        android:textStyle="bold"
        android:id="@+id/res"
        android:background="#7ECCFF"
        android:gravity="center"
        android:layout_marginBottom="20sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="20sp"
            android:onClick="seven"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="15sp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:onClick="eight"
            android:textSize="20sp"
            android:layout_marginRight="10sp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:onClick="nine"
            android:textSize="20sp"
            android:layout_marginRight="10sp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:onClick="divide"
            android:textSize="20sp"
            android:layout_marginRight="10sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="4"
            android:onClick="four"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="15sp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="5"
            android:onClick="five"
            android:layout_marginRight="10sp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="6"
            android:onClick="six"
            android:layout_marginRight="10sp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="*"
            android:onClick="multiply"
            android:layout_marginRight="10sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="1"
            android:onClick="one"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="15sp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="2"
            android:onClick="two"
            android:layout_marginRight="10sp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="20sp"
            android:onClick="three"
            android:layout_marginRight="10sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="-"
            android:onClick="subtract"
            android:layout_marginRight="10sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="."
            android:onClick="decimal"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="15sp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="0"
            android:onClick="zero"
            android:layout_marginRight="10sp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textSize="20sp"
            android:onClick="equal"
            android:layout_marginRight="10sp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="+"
            android:onClick="add"
            android:layout_marginRight="10sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="CE"
            android:onClick="clearlast"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="15sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="CLEAR ALL"
            android:onClick="clearall"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="15sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="C"
            android:onClick="clearfield"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="15sp"
            />
    </LinearLayout>

</LinearLayout>